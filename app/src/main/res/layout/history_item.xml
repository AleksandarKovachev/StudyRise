<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/history_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/value_finance"
        android:padding="20dp" />

    <ImageView
        android:id="@+id/history_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:src="@drawable/ic_fab" />

    <TextView
        android:id="@+id/history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/history_menu"
        android:layout_toStartOf="@+id/history_menu"
        android:paddingTop="10dp"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/history_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/history_name"
        android:layout_alignBottom="@+id/history_date"
        android:layout_alignEnd="@+id/history_date"
        android:layout_alignRight="@+id/history_date"
        android:padding="5dp" />
</RelativeLayout>